<h1> Order Details </h1>
<p id="notice"><%= notice %></p>
<table>
  <% @order.each do |order| %>
    <tr>
        <td><b>Customer : </b></td>
    </tr>
    <tr>
        <td><b>Name : </b></td>
        <td><%= Order.find(order.id).customer.name %></td>
    </tr>
    <tr>
        <td><b>Phone : </b></td>
        <td><%= Order.find(order.id).customer.phone %></td>
    </tr>
    <tr>
        <td><b>Email : </b></td>
        <td><%= Order.find(order.id).customer.email %></td>
    </tr>
    <tr>
        <td><br></td>
    </tr>
    <tr>
        <td><b>Order : </b></td>
    </tr>
    <tr>
        <td><b>Order Total: </b></td>
        <td><%= order.total %></td>
    </tr>
    <tr>
        <td><b>Order Date: </b></td>
        <td><%= order.order_date %></td>
    </tr>
    <tr>
        <td><b>Order Status: </b></td>
        <td><%= order.status %></td>
    </tr>
    <tr>
        <td><br></td>
    </tr>
    <tr>
        <td><b>Order Detials Menu : </b></td>
    </tr>
    <% order.order_details.each do |detail| %>
      <tr>
          <td><b>Menu : </b></td>
          <td><%= OrderDetail.find(detail.id).menu.name %></td>
      </tr>
      <tr>
          <td><b>Quantity : </b></td>
          <td><%= detail.quantity %></td>
      </tr>
      <tr>
          <td><b>Price : </b></td>
          <td><%= detail.price %></td>
      </tr>
      <tr>
        <td><br></td>
    </tr>
    <% end %>
    <tr>
        <td><a href="/order/<%= order.id %>/edit">Edits</a></td>
        <td><%= link_to 'Back', order_index_path %></td>
    </tr>
  <% end %>
</table>