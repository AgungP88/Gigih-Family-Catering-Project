<fieldset>
<%= f.label :menu %>
      <%= f.select(:menu_id, options_for_select(@menu.map{|m| [m.name,m.id]}), prompt: "Please Select") %>
      <br>

      <%= f.label :quantity %>
      <%= f.text_field :quantity, placeholder: "Quantity" %>
      <br>

      <%= f.label :price %>
      <%= f.text_field :price, placeholder: "Price" %>
      <%= f.hidden_field :_destroy %>
      <%= link_to "Remove", '#', class: "remove-fields" %>
      <br>
</fieldset>