<h1> Categories </h1>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
        <td><b>Number</b></td>
        <td><b>Name</b></td>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @categories.each do |category| %>
      <tr>
        <td><%= i=i+1 %></td>
        <td><%= category.name %></td>
        <td><a href="/category/<%= category.id %>">Details</a></td>
        <td><a href="/category/<%= category.id %>/edit">Edits</a></td>
        <td><%= button_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="/category/new">New Category</a>