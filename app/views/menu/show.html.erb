<h1> Menu Details </h1>
<p id="notice"><%= notice %></p>
<table>
  <% @menu.each do |menu| %>
    <tr>
        <td><b>Menu name: </b></td>
        <td><%= menu.name %></td>
    </tr>
    <tr>
        <td><b>Menu description: </b></td>
        <td><%= menu.description %></td>
    </tr>
    <tr>
        <td><b>Menu price: </b></td>
        <td><%= menu.price %></td>
    </tr>
    <tr>
        <td><b>Menu category: </b></td>
        <td><%= Menu.find(menu.id).category.name %></td>
    </tr>
  <% end %>
</table>