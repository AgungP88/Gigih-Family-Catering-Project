<h3>Create Menu</h3>
<%= form_with model: @menu, url: menu_index_path do |form| %>
  <%= form.text_field :name, placeholder: "name" %>
  <%= form.text_field :description, placeholder: "description" %>
  <%= form.text_field :price, placeholder: "price" %>
  <%= form.text_field :category_id, placeholder: "category_id" %>
  <%= form.submit %>
<% end %>