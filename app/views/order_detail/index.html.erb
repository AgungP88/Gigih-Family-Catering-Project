<h1> Order Details </h1>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
        <td><b>Number</b></td>
        <td><b>Order Id</b></td>
        <td><b>Menu Id</b></td>
        <td><b>Quantity</b></td>
        <td><b>Price</b></td>
    </tr>
  </thead>
  <tbody>
    <% i = 0 %>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= i=i+1 %></td>
        <td><%= order_detail.order_id %></td>
        <td><%= order_detail.menu_id %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.price %></td>
        <td><a href="/order_detail/<%= order_detail.id %>">Details</a></td>
        <td><a href="/order_detail/<%= order_detail.id %>/edit">Edits</a></td>
        <td><%= button_to 'Delete', order_detail_path(order_detail), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="/order_detail/new">New Order Detail</a>